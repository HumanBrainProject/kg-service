# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

#Private Space Creation

POST    /privatespace                   controllers.KGController.createPrivateSpace()


#KG Editor routes

GET    /api/nodetypes                  controllers.Nodetype.list( privateSpace: String ?= "minds")
GET    /api/instances/*nodetype         controllers.InstanceController.list(nodetype: String)
GET    /api/instance/*id                 controllers.InstanceController.get(id: String)
POST   /api/instance/*id                 controllers.InstanceController.update(id: String)
POST   /api/schema/:organization/:domain/:entityType/:version  controllers.KGController.createSchema(organization: String, domain: String, entityType: String, version: String)

GET    /api/reconciled/:id              controllers.InstanceController.getSpecificReconciledInstance(id: String ,rev:Int ?= 1)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   controllers.Assets.versioned(path="/public", file: Asset)

# Extract data from a dataworkbench templated excel file
POST    /api/dataworkbench/extractDataFromExcel           controllers.ExcelFileImporterController.extractDataFromExcel(action: Option[String])

# Monitoring

GET     /metrics                        com.github.stijndehaes.playprometheusfilters.controllers.PrometheusController.getMetrics
