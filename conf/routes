# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

#Private Space Creation

POST    /privatespace                   controllers.NexusCommonController.createPrivateSpace()


#KG Editor routes

GET    /api/nodetypes                  controllers.NexusEditorController.listEntities( privateSpace: String ?= "minds")
GET    /api/instances/*nodetype         controllers.NexusEditorController.listInstances(nodetype: String)
GET    /api/instance/*id                 controllers.NexusEditorController.getInstance(id: String)
POST   /api/instance/*id                 controllers.NexusEditorController.updateInstance(id: String)
POST   /api/schema/:organization/:domain/:entityType/:version  controllers.NexusCommonController.createSchema(organization: String, domain: String, entityType: String, version: String)

GET    /api/reconciled/:id              controllers.NexusEditorController.getSpecificReconciledInstance(id: String ,rev:Int ?= 1)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   controllers.Assets.versioned(path="/public", file: Asset)

# Extract data from a dataworkbench templated excel file
POST    /api/dataworkbench/extractDataFromExcel           controllers.ExcelImportController.extractDataFromExcel(action: Option[String])


# Auth


GET     /auth/groups                         controllers.OIDCController.groups
OPTIONS /auth/groups                         controllers.OIDCController.groupsOptions


# Monitoring

GET     /metrics                        com.github.stijndehaes.playprometheusfilters.controllers.PrometheusController.getMetrics
